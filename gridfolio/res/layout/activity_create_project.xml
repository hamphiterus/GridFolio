<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_weight="1"
    android:background="@drawable/blue_bg" >

    <!-- Menu Panel -->

    <RelativeLayout
        android:id="@+id/menuPanel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/gray_bg"
        android:gravity="right"
        android:orientation="vertical" >

        <Button
            android:id="@+id/menu_title_1"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:background="#353535"
            android:drawableLeft="@drawable/perfil"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="OLA FILIPA"
            android:textColor="@android:color/white" >
        </Button>

        <View
            android:id="@+id/menu_item_divider_1"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/menu_title_1"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="#b5b5b5" />

        <Button
            android:id="@+id/button_perfil"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/menu_item_divider_1"
            android:layout_marginLeft="2dp"
            android:drawableLeft="@drawable/perfil"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="@string/perfil_menu"
            android:textColor="@android:color/white" >
        </Button>

        <View
            android:id="@+id/menu_item_divider_2"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/button_perfil"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#b5b5b5" />

        <Button
            android:id="@+id/button_eventos"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/menu_item_divider_2"
            android:layout_marginLeft="2dp"
            android:drawableLeft="@drawable/eventosicon"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="@string/events_menu"
            android:textColor="@android:color/white" >
        </Button>

        <View
            android:id="@+id/menu_item_divider_3"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/button_eventos"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#b5b5b5" />

        <Button
            android:id="@+id/button_mapa"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/menu_item_divider_3"
            android:layout_marginLeft="2dp"
            android:drawableLeft="@drawable/mapamaior"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="@string/map_menu"
            android:textColor="@android:color/white" >
        </Button>

        <View
            android:id="@+id/menu_item_divider_4"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/button_mapa"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#b5b5b5" />

        <Button
            android:id="@+id/button_projetos"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/menu_item_divider_4"
            android:layout_marginLeft="2dp"
            android:drawableLeft="@drawable/projectos"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="@string/projets_menu"
            android:textColor="@android:color/white" >
        </Button>

        <View
            android:id="@+id/menu_item_divider_5"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/button_projetos"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#b5b5b5" />

        <Button
            android:id="@+id/button_credits"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/menu_item_divider_5"
            android:layout_marginLeft="2dp"
            android:drawableLeft="@drawable/ic_creditos"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="@string/credits_menu"
            android:textColor="@android:color/white" >
        </Button>

        <View
            android:id="@+id/menu_item_divider_6"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/button_credits"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#b5b5b5" />
    </RelativeLayout>

    <!-- Sliding Panel -->

    <LinearLayout
        android:id="@+id/slidingPanel"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/gray_bg"
        android:gravity="left"
        android:orientation="vertical" >

        <View
            android:id="@+id/dividerHeaderBottom"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#414141" />

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true" >

            <RelativeLayout
                android:id="@+id/layout_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_bg" >

                <LinearLayout
                    android:id="@+id/liniar_Titulo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_margin="20dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textViewTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title"
                        android:textColor="#ffffff" />

                    <EditText
                        android:id="@+id/editTextTitle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text"
                        android:textColor="#ffffff"
                        android:textSize="15sp" >

                        <requestFocus />
                    </EditText>
                </LinearLayout>

                <View
                    android:id="@+id/menu_item_divider_2.1"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/liniar_Titulo"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:background="#b5b5b5" />

                <LinearLayout
                    android:id="@+id/liniar_Disciplina"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/menu_item_divider_2.1"
                    android:layout_margin="20dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textViewDisciplina"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/disciplin"
                        android:textColor="#ffffff" />

                    <EditText
                        android:id="@+id/editTextDisciplina"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text"
                        android:textColor="#ffffff"
                        android:textSize="15sp" >

                        <requestFocus />
                    </EditText>
                </LinearLayout>

                <View
                    android:id="@+id/menu_item_divider_2.2"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/liniar_Disciplina"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:background="#b5b5b5" />

                <LinearLayout
                    android:id="@+id/liniar_Teachers"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/menu_item_divider_2.2"
                    android:layout_margin="20dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textViewTeachers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/teachers"
                        android:textColor="#ffffff" />

                    <EditText
                        android:id="@+id/editTextTeachers"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textMultiLine"
                        android:textColor="#ffffff"
                        android:textSize="15sp" >

                        <requestFocus />
                    </EditText>
                </LinearLayout>

                <View
                    android:id="@+id/menu_item_divider_2.3"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/liniar_Teachers"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:background="#b5b5b5" />

                <LinearLayout
                    android:id="@+id/liniar_Discription"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/menu_item_divider_2.3"
                    android:layout_margin="20dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textViewDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/description"
                        android:textColor="#ffffff" />

                    <EditText
                        android:id="@+id/editTextDescription"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textMultiLine"
                        android:textColor="#ffffff"
                        android:textSize="15sp" >

                        <requestFocus />
                    </EditText>
                </LinearLayout>

                <View
                    android:id="@+id/menu_item_divider_2.4"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/liniar_Discription"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:background="#b5b5b5" />

                <RelativeLayout
                    android:id="@+id/layout_image"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/menu_item_divider_2.4"
                    android:layout_marginBottom="25dp" >

                    <LinearLayout
                        android:id="@+id/liniar_aux1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/datafeito"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:text="@string/process"
                            android:textColor="#ffffff" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/liniar_aux2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/liniar_aux1"
                        android:layout_marginTop="0dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/picture_1"
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:clickable="true"
                            android:onClick="pictureEvent"
                            android:src="@drawable/ic_photo" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/buttonSave"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/liniar_aux2"
                        android:gravity="center"
                        android:onClick="saveChanges"
                        android:text="Save" />
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>